{
  "name": "overlay-board",
  "version": "1.0.7",
  "main": "main.js",
  "description": "Overlay ToDo application",
  "author": "Jonas",
  "scripts": {
    "start": "electron .",
    "publish": "DEBUG=electron-builder,electron-notarize npx electron-builder --mac --universal --publish always"
  },
  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "electron-notarize": "^1.2.2",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "files": [
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "build/tray",
        "to": "assets/tray"
      }
    ],
    "appId": "de.jonas.overlayboard",
    "mac": {
      "target": [
        "zip"
      ],
      "icon": "icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": true,
      "identity": "JONAS LUC HOFFMANN"
    },
    "afterSign": "build/notarize.js",
    "publish": [
      {
        "provider": "github",
        "owner": "JoniHoffi",
        "repo": "overlay-board"
      }
    ]
  }
}
